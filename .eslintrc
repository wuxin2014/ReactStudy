{
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true
  },
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "settings": {
    "import/resolver": "node"
  },
  "rules": {
    "indent": "off", // 缩进风格
    "semi": [2, "always"], // 语句强制分号结尾
    "quotes": ["error", "single"], // 引号类型
    "quote-props": ["error", "consistent"], // 对象字面量中的属性名是否强制双引号
    "block-spacing": ["error", "never"], // 语句块前后是否需要空格
    "jsx-quotes": ["error", "prefer-double"],
    "linebreak-style": "off", // 换行风格
    "no-unused-expressions": 0,
    "no-unused-vars": 0, // 不能有声明后未被使用的变量或参数
    "no-var": 0, // 禁用var，用let和const代替
    "no-console": 0, // 禁止使用console
    "no-const-assign": 2, // 禁止修改const声明的变量
    "no-cond-assign": 0, // 禁止在条件表达式中使用赋值语句
    "no-empty": 2, // 块语句中的内容不能为空
    "no-extra-semi": 2, // 禁止多余的冒号
    "comma-dangle": [2, "never"],// 对象字面量项尾不能有逗号
    "eqeqeq": "error", //必须使用全等
    "space-before-function-paren": [0, "always"], // 函数定义时括号前面要不要有空格
    "space-in-parens": [0, "never"], // 小括号里面要不要有空格
    "no-mixed-spaces-and-tabs": [2, false], // 禁止混用tab和空格
    "keyword-spacing": ["error", { "after": true }],
    "object-curly-spacing": ["error", "never"], // 大括号内是否允许不必要的空格
    "object-shorthand": 0, // 强制对象字面量缩写语法
    "no-trailing-spaces": ["error", { "skipBlankLines": true }], // 允许尾随空格空行
    "func-names": ["error", "as-needed"],
    "arrow-body-style": ["error", "always"], // 箭头函数
    "arrow-parens": ["error", "always"],
    "consistent-return": ["error", {"treatUndefinedAsUnspecified": true}],
    "no-script-url": 0,
    "global-require": 0,
    "import/no-unresolved": 0,
    "import/extensions": 0,
    "import/no-extraneous-dependencies": 0,
    "import/prefer-default-export": 0,
    "prefer-template": 0,
    // "jsx-a11y/no-static-element-interactions": 0,
    "jsx-a11y/anchor-is-valid": 0,
    "react/jsx-uses-react": 0,
    "react/jsx-uses-vars": ["error"],
    "react/no-array-index-key": 0,
    "react/prefer-stateless-function": 0,
    "react/jsx-closing-tag-location": 0,
    "react/jsx-closing-bracket-location": "off",
    "react/forbid-prop-types": 0,
    "react/require-default-props": 0,
    "react/jsx-filename-extension": 0,
    "react/no-danger": 0
  }
}
